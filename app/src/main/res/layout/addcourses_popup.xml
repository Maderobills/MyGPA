<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="1dp"
            android:background="@drawable/form_input_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Your Courses"
                android:textColor="@color/white"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/schoolNameSelectText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select School"
                    android:background="@drawable/form_input_background"
                    android:textColorHint="@color/lavender"
                    android:padding="10dp"
                    android:layout_marginVertical="2.5dp"/>

                <EditText
                    android:id="@+id/programSelectText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Programme"
                    android:background="@drawable/form_input_background"
                    android:textColorHint="@color/lavender"
                    android:padding="10dp"
                    android:layout_marginVertical="2.5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/academicYearText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Academic Year"
                        android:inputType="date"
                        android:background="@drawable/form_input_background"
                        android:textColorHint="@color/lavender"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_marginVertical="2.5dp"
                        android:layout_marginRight="2.5dp"/>

                    <EditText
                        android:id="@+id/semestersNumText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Semester"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:background="@drawable/form_input_background"
                        android:textColorHint="@color/lavender"
                        android:padding="10dp"
                        android:layout_marginVertical="2.5dp"
                        android:layout_marginLeft="2.5dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/numberOfCoursesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number of Courses"
                        android:inputType="date"
                        android:background="@drawable/form_input_background"
                        android:textColorHint="@color/lavender"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_marginVertical="2.5dp"
                        android:layout_marginRight="2.5dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:src="@drawable/library_add_24"
                        android:layout_marginVertical="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:background="@drawable/form_input_background"
                        android:id="@+id/loadInputButton" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:id="@+id/cancelButton2" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end">


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:id="@+id/addButton2" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>



</RelativeLayout>