<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="1dp"
            android:background="@drawable/form_input_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill this Form"
                android:textColor="@color/white"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/schoolNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of School"
                    android:background="@drawable/form_input_background"
                    android:textColorHint="@color/lavender"
                    android:padding="10dp"
                    android:layout_marginVertical="2.5dp"/>

                <EditText
                    android:id="@+id/programEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Programme"
                    android:background="@drawable/form_input_background"
                    android:textColorHint="@color/lavender"
                    android:padding="10dp"
                    android:layout_marginVertical="2.5dp"/>

                <EditText
                    android:id="@+id/startDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Date"
                    android:inputType="date"
                    android:background="@drawable/form_input_background"
                    android:textColorHint="@color/lavender"
                    android:padding="10dp"
                    android:layout_marginVertical="2.5dp"/>

                <EditText
                    android:id="@+id/endDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End Date"
                    android:inputType="date"
                    android:background="@drawable/form_input_background"
                    android:textColorHint="@color/lavender"
                    android:padding="10dp"
                    android:layout_marginVertical="2.5dp"/>

                <EditText
                    android:id="@+id/semestersEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number of Semesters"
                    android:inputType="number"
                    android:background="@drawable/form_input_background"
                    android:textColorHint="@color/lavender"
                    android:padding="10dp"
                    android:layout_marginVertical="2.5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:id="@+id/cancelButton" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end">


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:id="@+id/addButton" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>



</RelativeLayout>