<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    tools:context=".ReportsHistory">


       <LinearLayout
           android:id="@+id/school_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"

                  android:orientation="horizontal">

                  <RelativeLayout
                      android:id="@+id/rel_layout"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:padding="5dp">

                      <TextView
                          android:id="@+id/School_text"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="University/College"
                          android:textAppearance="?android:textAppearanceSmall"
                          android:textColor="#000"
                          android:textSize="12dp"/>

                      <TextView
                          android:id="@+id/School_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/School_text"
                          android:maxLines="1"
                          android:text="DOMINION UNIVERSITY COLLEGE"
                          android:textAppearance="?android:textAppearanceSmall"
                          android:textColor="@color/lavender"
                          android:textStyle="bold"/>

                  </RelativeLayout>

                  <RelativeLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:gravity="center_horizontal"
                      android:padding="5dp">


                      <LinearLayout
                          android:id="@+id/leftlin"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginHorizontal="5dp"
                          android:gravity="center"
                          android:orientation="vertical">

                          <TextView
                              android:id="@+id/scale_text"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/scale_type"
                              android:text="GPA scale"
                              android:textAppearance="?android:textAppearanceSmall"
                              android:textColor="@color/black"
                              android:textSize="10dp"
                              android:textStyle="bold" />
                          <TextView
                              android:id="@+id/scale_type"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:maxLines="1"
                              android:text="4.0"
                              android:textAppearance="?android:textAppearanceSmall"
                              android:textColor="@color/lavender"
                              android:textSize="20dp"
                              android:textStyle="bold"/>

                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginHorizontal="5dp"

                          android:layout_toRightOf="@+id/leftlin"
                          android:gravity="center"
                          android:orientation="vertical">

                          <TextView
                              android:id="@+id/sem_text"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="No.semesters"
                              android:textAppearance="?android:textAppearanceSmall"
                              android:textColor="@color/black"
                              android:textSize="10dp"
                              android:textStyle="bold" />
                          <TextView
                              android:id="@+id/sem_number"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="6"

                              android:textAppearance="?android:textAppearanceSmall"
                              android:textColor="@color/lavender"
                              android:textSize="20dp"
                              android:textStyle="bold"/>

                      </LinearLayout>


                  </RelativeLayout>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="horizontal"
                  android:padding="5dp">

                  <TextView
                      android:id="@+id/programme_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Programme "
                      android:textAppearance="?android:textAppearanceSmall"
                      android:textColor="@color/black"
                      android:textSize="12dp"/>
                  <TextView
                      android:id="@+id/type_txt_income"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:maxLines="1"
                      android:text="Programme"
                      android:textAppearance="?android:textAppearanceSmall"
                      android:textColor="@color/lavender"
                      android:textStyle="bold"/>
              </LinearLayout>

           <LinearLayout
               android:id="@+id/coursesView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:orientation="vertical"
               android:background="@color/white">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Courses"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/lavender"
                       android:layout_weight="1"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Score"
                       android:textAlignment="viewEnd"
                       android:layout_marginRight="10dp"
                       android:textColor="@color/lavender"
                       android:layout_weight="1"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/numberOfSemester1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Semester: 1"
                       android:background="@drawable/layout_background"
                       android:textAlignment="center"
                       android:textColor="@color/white"
                       android:layout_weight="1"/>


                   <androidx.recyclerview.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="5dp"
                       android:background="@drawable/form_input_background"
                       android:id="@+id/recycler_id_courses">

                   </androidx.recyclerview.widget.RecyclerView>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/numberOfSemester2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Semester: 2"
                       android:background="@drawable/layout_background"
                       android:textAlignment="center"
                       android:textColor="@color/white"
                       android:layout_weight="1"/>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/nameOfCourse2"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="Mathematics"
                           android:textColor="#FA0000" />

                       <TextView
                           android:id="@+id/scoreOfCourse2"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="3"
                           android:text="82/100"
                           android:textAlignment="viewEnd"
                           android:textColor="#FA0000" />

                   </LinearLayout>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/numberOfSemester"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Semester: 3"
                       android:background="@drawable/layout_background"
                       android:textAlignment="center"
                       android:textColor="@color/white"
                       android:layout_weight="1"/>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/nameOfCourse"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="Economics"
                           android:textColor="#FA0000" />

                       <TextView
                           android:id="@+id/scoreOfCourse"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="3"
                           android:text="82/100"
                           android:textAlignment="viewEnd"
                           android:textColor="#FA0000" />

                   </LinearLayout>

               </LinearLayout>
               <!--<androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:padding="10dp"
                   android:background="@drawable/form_input_background"
                   android:id="@+id/recycler_id_courses">

               </androidx.recyclerview.widget.RecyclerView>-->


           </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>