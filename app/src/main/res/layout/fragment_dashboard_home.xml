                        android:layout_height="wrap_content"
                        android:src="@drawable/star_rate3" />

                    <ImageView
                        android:id="@+id/cgpa_rate_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_rate4" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


