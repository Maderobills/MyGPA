<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="3dp"
    android:elevation="5dp"
    android:padding="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/nameCourse"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingHorizontal="6dp"
                android:textAlignment="viewStart"
                android:text="Course: "
                android:textColor="@color/lavender" />
            <TextView
                android:id="@+id/nameOfCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background"
                android:textAlignment="viewStart"
                android:text="Psychology"
                android:textStyle="bold"
                android:paddingHorizontal="6dp"
                android:textColor="#fff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gradePointCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingHorizontal="6dp"
                    android:textAlignment="viewStart"
                    android:text="GP: "
                    android:textColor="@color/lavender" />
                <TextView
                    android:id="@+id/gradePointOfCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background"
                    android:paddingHorizontal="6dp"
                    android:text="4.0"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/codeCourse"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingHorizontal="6dp"
                    android:textAlignment="viewStart"
                    android:text="Code: "
                    android:textColor="@color/lavender" />
                <TextView
                    android:id="@+id/codeOfCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background"
                    android:paddingHorizontal="6dp"
                    android:text="PHY001"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/scoreCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingHorizontal="6dp"
                    android:textAlignment="viewStart"
                    android:text="Grade Score: "
                    android:textColor="@color/lavender" />
                <TextView
                    android:id="@+id/scoreOfCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="82"
                    android:background="@drawable/layout_background"
                    android:paddingHorizontal="6dp"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/creditCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingHorizontal="6dp"
                    android:text="Credit Hours: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/lavender" />
                <TextView
                    android:id="@+id/creditHourCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="82"
                    android:background="@drawable/layout_background"
                    android:paddingHorizontal="6dp"
                    android:textAlignment="viewStart"
                    android:textColor="#fff" />

            </LinearLayout>
            </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>